<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_lateral_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:weightSum="3"
        tools:context="una.android.rapimoncha.Main" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
                    android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <ImageButton
                android:id="@+id/btn_main_promociones"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/activity_main_descripcion_btn_promociones"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_promo" />

            <ImageButton
                android:id="@+id/btn_main_home"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/activity_main_descripcion_btn_home"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_home" >
            </ImageButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="2" >

            <ImageButton
                android:id="@+id/btn_main_myhome"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/activity_main_descripcion_btn_myhome"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_myhome" />

            <ImageButton
                android:id="@+id/btn_main_solicitudes"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/activity_main_descripcion_btn_solicitudes"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_request" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3" >

            <ImageButton
                android:id="@+id/btn_main_pedidos"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/activity_main_descripcion_btn_pedidos"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_subscripciones" />

            <ImageButton
                android:id="@+id/btn_main_productos"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/activity_main_descripcion_btn_productos"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_product" />

            <ImageButton
                android:id="@+id/btn_main_configuracion"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/activity_main_descripcion_btn_configuraciones"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_configuration" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/menu_container_111"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>