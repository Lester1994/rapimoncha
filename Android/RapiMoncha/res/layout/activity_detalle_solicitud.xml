<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/lbltitulodetallesolicitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/activity_detalle_solicitud_lbltitulodetallesolicitud"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lbldetallesolicitante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lbltitulodetallesolicitud"
            android:layout_marginTop="28dp"
            android:layout_toLeftOf="@+id/lbltitulodetallesolicitud"
            android:text="@string/activity_detalle_solicitud_lbldetallesolicitante"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lbldetallefecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/lbldetallesolicitante"
            android:layout_below="@+id/lbldetallesolicitante"
            android:layout_marginTop="25dp"
            android:text="@string/activity_detalle_solicitud_lbldetallefecha"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lbldetalleesperohasta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lbldetallefecha"
            android:layout_marginTop="24dp"
            android:text="@string/activity_detalle_solicitud_lbldetalleesperohasta"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lbldetallecosto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lbldetalleesperohasta"
            android:layout_marginTop="22dp"
            android:text="@string/activity_detalle_solicitud_lbldetallecosto"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lbldetalleestado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/lbltitulodetallesolicitud"
            android:text="@string/activity_detalle_solicitud_lbldetalleestado"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/lbldetalleproductos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/lbldetalleestado"
            android:layout_marginTop="21dp"
            android:text="@string/activity_detalle_solicitud_lbldetalleproductos"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ListView
            android:id="@+id/lstdetalleproductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lbldetalleestado"
            android:layout_below="@+id/lbldetalleproductos"
            android:layout_marginTop="16dp" >
        </ListView>

        <TextView
            android:id="@+id/lbldetallesolicitantedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lbldetallefecha"
            android:layout_alignLeft="@+id/lbltitulodetallesolicitud"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/lbldetallefechadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lbldetallesolicitantedata"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/lbldetallefecha"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/lbldetalleesperohastadata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lbldetalleesperohasta"
            android:layout_alignBottom="@+id/lbldetalleesperohasta"
            android:layout_alignLeft="@+id/lbldetallefechadata"
            android:layout_alignParentRight="true"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/lbldetallecostodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lbldetallecosto"
            android:layout_alignBottom="@+id/lbldetallecosto"
            android:layout_alignLeft="@+id/lbldetalleesperohastadata"
            android:layout_alignParentRight="true"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/lblestadodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lbldetalleproductos"
            android:layout_alignLeft="@+id/lbldetallecostodata"
            android:layout_alignParentRight="true"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

    <ListView
        android:id="@+id/menu_container_detallesolicitud_111"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#fff"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>