<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/lbl_datosimportantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lbl_titulobienvenida"
        android:layout_alignRight="@+id/img_icon"
        android:layout_below="@+id/img_icon"
        android:layout_marginTop="27dp"
        android:text="@string/fragment_registrocomerciosky_lbl_datosimportantes"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/lbl_titulobienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/img_icon"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="24dp"
        android:layout_toLeftOf="@+id/lbl_notas"
        android:text="@string/fragment_registrocomerciosky_lbl_titulobienvenida"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/lbl_notas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:text="@string/fragment_registrocomerciosky_lbl_notas"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="26dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/fragment_registrocomerciosky_img_icon_description"
        android:src="@drawable/icon_registro" />

</RelativeLayout>
