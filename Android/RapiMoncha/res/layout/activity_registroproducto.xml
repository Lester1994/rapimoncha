<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3" >
    <LinearLayout
        android:id="@+id/frg_container_product"
        android:name="android.app.DialogFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2.8" />

    <RelativeLayout
        android:id="@+id/relativeLayout1_product"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20">

        <Button
            android:id="@+id/btn_next_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/activity_registroproducto_btnnext" />

        <Button
            android:id="@+id/btnprev_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/activity_registroproducto_btnprev" />
    </RelativeLayout>
</LinearLayout>
