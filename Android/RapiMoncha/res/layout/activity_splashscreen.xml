<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
     >

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:src="@drawable/icon_splash"
        android:contentDescription="@string/activity_splashscreen_descripcionimagen" />

    <TextView
        android:id="@+id/lbl_proceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prg_barraprogreso"
        android:layout_alignRight="@+id/prg_barraprogreso"
        android:layout_below="@+id/img_icon"
        android:layout_marginTop="72dp"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:text="@string/activity_splashscreen_default_lblproceso"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ProgressBar
        android:id="@+id/prg_barraprogreso"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img_icon"
        android:layout_alignRight="@+id/img_icon"
        android:layout_below="@+id/lbl_proceso"
        android:layout_marginTop="25dp" />

</RelativeLayout>
